<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="activ" href="#login">Sign In</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Webshop betreten</h1>
      <form action="/auth/login " method="POST">

        <div class="input-field">
          <input id="email" name="email" type="text" class="validate" required />
          <label for="email">Email</label>
          <span class="helper-text" data-error="Email eingeben"></span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required />
          <label for="password">Passwort</label>
          <span class="helper-text" data-error="Passwort eingeben"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <p><a href="/auth/reset">Passwort vergessen?</a></p>

        <button class="btn btn-primery" type="submit">Sign In</button>

      </form>
    </div>
    <div id="register" class="col s6 offset-s3">

      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}

      <h1>Account erstellen</h1>
      <form action="/auth/register" method="POST" novalidate>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required />
          <label for="name">Name</label>
          <span class="helper-text" data-error="Name eingeben"></span>
        </div>

        <div class="input-field">
          <input id="remail" name="email" type="text" class="validate" required />
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Email eingeben"></span>
        </div>

        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required />
          <label for="rpassword">Passwort</label>
          <span class="helper-text" data-error="Passwort eingeben"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required />
          <label for="confirm">Passwort wiederholen</label>
          <span class="helper-text" data-error="Passwort nochmal eingeben"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button class="btn btn-primery" type="submit">Regisrieren</button>

      </form>
    </div>
  </div>
</div>