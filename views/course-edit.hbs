<h1>Bearbeiten {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form" novalidate>

  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}"/>
    <label for="title">Kursname</label>
    <span class="helper-text" data-error="Kusnamen eingeben" ></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1"value="{{course.price}}"/>
    <label for="price">Preis</label>
    <span class="helper-text" data-error="Preis eingeben" ></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}"/>
    <label for"img">URL des Bildes</label>
    <span class="helper-text" data-error="URL des Bildes eingeben" ></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}" />

  <input type="hidden" name="id" value="{{course.id}}">
  <button type="submit" class="btn btn-primary">Bearbeten</button>
</form>

<form action="/courses/remove" method="POST">

  <input type="hidden" name="_csrf" value="{{csrf}}" />

  <input type="hidden" name="id" value="{{course.id}}">
